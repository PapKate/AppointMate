@implements IDisposable

@using static MeetBase.Blazor.PaletteColors

@namespace MeetCore

<Header AppName="@MeetCoreContants.AppName"
        ForeColor="@White"
        BackColor="@Amber" />

<div class="appContainer @CssClass" id="@Id">
    <div class="pageContainer">
        @ChildContent
    </div>
</div>

<SideMenu IsSecretary="@StateManager.IsSecretary" />

<style>

    .appContainer {
        position: relative;
        width: calc(100% - 160px);
        height: calc(100vh - 4rem);
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-left: 160px;
        overflow-y : auto;
    }

    .pageContainer {
        width: 80%;
        max-width: 1024px;
        background-color: @White.NormalizedColor();
        border: solid 1px @LightGray.NormalizedColor();
    }

    .page {
        background-color: @White.ToDarkerColor(1).NormalizedColor();
    }

    @@media screen and (max-width: 1270px) {

        .pageContainer {
            width: 100%;
        }
    }
</style>
