@inherits LayoutComponentBase

@using static MeetBase.Blazor.PaletteColors
@using static MeetBase.Blazor.CssVariables

@using static MeetBase.Blazor.Personalization

<PageTitle>MeetEdu</PageTitle>


<div class="page">
    <main>
        @Body
    </main>
</div>

<MudThemeProvider Theme="@mMeetEduTheme" />
<MudDialogProvider />
<MudSnackbarProvider />

<style>
    
    .appContainer {
        position: relative;
        width: 64%;
        height: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    @@media screen and (max-width: 1400px) {
        .appContainer {
            width: 100%;
        }
    }

    @@media screen and (max-width: 960px) {
        .appContainer {
            padding: @LargePadding;
        }
    }

    .modelContainer {
        position: relative;
        width: 100%;
        height: auto;
        display: grid;
        grid-template-columns: 3fr 2fr;
        border-radius: @VeryLargeBorderRadius;
        border: solid 1px @BorderBrushVariable.GetCssVariable();
    }

    .modelRibbonContainer {
        position: absolute;
        width: 100%;
        height: 80px;
        top: 24px;
        display: grid;
        grid-template-columns: 200px 1fr;
        gap: @VeryLargeGap;
        padding: 0 @LargePadding;
        background: @BackgroundVariable.GetCssVariable();
        color: @ForegroundVariable.GetCssVariable();
    }

    .modelRibbon {
        position: relative;
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    .modelRibbonInfoContainer {
        position: relative;
        display: flex;
        flex-direction: column;
    }

    .modelRibbonInfo {
        font-size: 140%;
        font-weight: 700;
    }

    .modelRibbonInfoDetails {
        position: relative;
        display: flex;
        align-items: center;
        gap: @VeryLargeGap;
    }

    .modelInfoContainer {
        position: relative;
        width: 100%;
        height: 100%;
        display: flex;
        flex-direction: column;
        gap: @VeryVeryLargeGap;
        padding: @LargePadding;
    }

    .modelImageAndContactContainer {
        position: relative;
        height: 200px;
        display: flex;
        align-items: flex-end;
        justify-content: flex-start;
        gap: @LargeGap;
    }

    .modelImageContainer {
        position: relative;
        width: 200px;
        height: 200px;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: @LargePadding;
        background: @White.NormalizedColor();
        border-radius: @LargeBorderRadius;
        filter: @LightFilterDropShadow;
        border: solid 1px @BorderBrushVariable.GetCssVariable();
    }

    .modelImage {
        position: relative;
        width: 100%;
        height: 100%;
        filter: @LightFilterDropShadow;
    }

    .modelContactContainer {
        position: relative;
        display: grid;
        grid-template-columns: 28px 1fr;
        grid-auto-rows: 28px;
        align-items: center;
        gap: @MediumGap;
    }

    .modelContactImage {
        position: relative;
        width: 28px;
        height: 28px;
        filter: @LightFilterDropShadow;
    }

    .modelWeeklyScheduleContainer {
        position: relative;
        display: grid;
        grid-template-columns: 1fr 3fr;
        gap: @MediumGap @VeryLargeGap;
        padding: @VeryLargePadding;
    }

    .modelWeeklySchedule {
        grid-row-start: 1;
        grid-row-end: 3;
        grid-column-start: 1;
        position: relative;
        display: flex;
        flex-direction: column;
        gap: @LargeGap;
    }

    .modelWeeklyScheduleTitle {
        font-size: 112%;
        font-weight: 700;
        color: @ForegroundVariable.GetCssVariable();
    }

    .modelWeeklyScheduleNote {
        grid-column-start: 1;
        grid-column-end: 3;
        font-size: 92%;
    }

    .modelWeeklyScheduleDayContainer {
        grid-column: 2 /3;
        position: relative;
        display: grid;
        grid-template-columns: 1fr 2fr;
        justify-items: right;
        gap: @MediumGap;
    }

    .modelWeeklyScheduleDay {
        font-weight: 600;
    }

    .modelWeeklyScheduleTime {
        grid-column-start: 2;
    }

    
    .sectionHeader {
        position: relative;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: @VeryLargePadding;
        font-weight: 600;
        font-size: 120%;
        filter: @LightFilterDropShadow;
        z-index: 2;
    }

    .sectionDescription {
        position: relative;
        padding: 2% 12%;
        text-align: center;
    }



    .staffMemberContainer {
        position: relative;
        top: 1rem;
        width: 100%;
        height: auto;
        min-width: 420px;
        display: grid;
        grid-template-columns: 1fr 1fr;
        padding: @VeryLargePadding;
        align-items: flex-end;
    }

    .staffMemberRibbonContainer {
        position: absolute;
        width: 100%;
        height: 60px;
        top: 36px;
        display: grid;
        grid-template-columns: 216px 1fr;
        gap: @VeryLargeGap;
        padding: @NormalPadding;
        font-size: 120%;
        font-weight: 600;
        background: @BackgroundVariable.GetCssVariable();
        color: @ForegroundVariable.GetCssVariable();
        filter: @LightFilterDropShadow;
    }

    .staffMemberRibbon {
        position: relative;
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    .staffMemberRibbonInfoContainer {
        position: relative;
        display: flex;
        flex-direction: column;
    }

    .staffMemberRibbonInfo {
        font-size: 100%;
        font-weight: 700;
    }

    .staffMemberRibbonInfoDetails {
        position: relative;
        display: flex;
        align-items: center;
        gap: @VeryLargeGap;
        font-size: 92%;
        font-weight: 400;
    }

    .staffMemberInfoContainer {
        position: relative;
        width: 100%;
        height: 100%;
        display: flex;
        flex-direction: column;
        gap: @SmallGap;
        padding: @LargePadding;
    }

    .staffMemberImageAndContactContainer {
        position: relative;
        top: -20px;
        height: 200px;
        display: flex;
        align-items: flex-end;
        justify-content: flex-start;
        gap: @LargeGap;
    }

    .staffMemberImageContainer {
        position: relative;
        width: 200px;
        height: 200px;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 0;
        background: @White.NormalizedColor();
        filter: @LightFilterDropShadow;
        border-radius: @LargeBorderRadius;
        border: solid 1px @BorderBrushVariable.GetCssVariable();
        overflow: hidden;
    }

    .staffMemberImage {
        position: relative;
        width: 100%;
        height: 100%;
        filter: @LightFilterDropShadow;
    }

    .staffMemberContactContainer {
        position: relative;
        display: grid;
        grid-template-columns: 28px 1fr;
        grid-auto-rows: 28px;
        align-items: center;
        gap: @MediumGap;
    }

    .staffMemberContactImage {
        position: relative;
        width: 28px;
        height: 28px;
        filter: @LightFilterDropShadow;
    }

    .staffMemberPositionContainer {
        position: relative;
        display: grid;
        grid-template-columns: 1fr 3fr;
        align-items: start;
        gap: @MediumGap;
        padding: 0 @VeryLargePadding 0 @VeryLargePadding;
    }

    .staffMemberPosition {
        text-align: right;
    }

    .staffMemberWeeklyScheduleContainer {
        position: relative;
        display: grid;
        grid-template-columns: 1fr 3fr;
        gap: @MediumGap @VeryLargeGap;
        padding: @VeryLargePadding;
    }

    .staffMemberWeeklySchedule {
        grid-row-start: 1;
        grid-row-end: 3;
        grid-column-start: 1;
        position: relative;
        display: flex;
        flex-direction: column;
        gap: @LargeGap;
    }

    .staffMemberWeeklyScheduleTitle {
        font-size: 112%;
        color: @ForegroundVariable.GetCssVariable();
        font-weight: 700;
    }

    .staffMemberWeeklyScheduleNote {
        grid-column-start: 1;
        grid-column-end: 3;
        font-size: 92%;
    }

    .staffMemberWeeklyScheduleDayContainer {
        position: relative;
        display: grid;
        grid-template-columns: 1fr 2fr;
        justify-items: right;
        gap: @MediumGap;
    }

    .staffMemberWeeklyScheduleDay {
        font-weight: 600;
    }

    .staffMemberWeeklyScheduleTime {
        grid-column-start: 2;
    }

    .locationContainer {
        position: relative;
        width: 100%;
        height: min-content;
        display: flex;
        align-items: flex-end;
        justify-content: flex-end;
    }

    .location {
        position: relative;
        width: 100%;
        height: auto;
        max-height: 300px;
        border-radius: @VeryLargeBorderRadius;
        border: 1px solid @LightGray.NormalizedColor();
    }

    .staffMemberQuoteContainer {
        position: relative;
        width: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        font-style: italic;
        font-weight: 300;
        text-align: center;
        padding: 1rem;
        gap: @LargeGap;
    }

    .staffMemberScheduleContainer {
        padding: @VeryLargePadding;
    }

    .staffmemberRibbonEditContainer {
        width: 3rem;
        height: 3rem;
        padding: 8px;
        margin-right: 8px;
        cursor: pointer;
    }

    @@media screen and (max-width: 440px) {

        .staffMemberImageAndContactContainer {
            height: 160px;
        }

        .staffMemberContainer {
            min-width: 360px;
            width: 360px;
            font-size: 90%;
        }

        .staffMemberRibbonContainer {
            grid-template-columns: 132px 1fr;
        }

        .staffMemberImageContainer {
            width: 120px;
            height: 120px;
        }

        .staffMemberPositionContainer {
            padding: @LargePadding @LargePadding 0 @LargePadding;
        }

        .staffMemberWeeklyScheduleContainer {
            gap: @MediumGap @LargeGap;
            padding: @LargePadding;
        }
    }

</style>