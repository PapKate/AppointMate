@page "/departments"

@using MeetBase.Blazor

@using static MeetBase.Blazor.PaletteColors
@using static MeetBase.Blazor.Personalization

@namespace MeetEdu

<PageTitle>@MeetEduConstants.AppName Search</PageTitle>

<PageContainer>
    @if(!mDepartments.IsNullOrEmpty())
    {
        @foreach(var department in mDepartments)
        {
            <DepartmentPreview Model="@department" IsPreview="true" />
        }
    }
</PageContainer>

<style>
    .searchPageContainer {
        position: relative;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 40px;
        padding: 40px;
    }

    .searchPageSearchBarContainer {
        position: relative;
        width: 80%;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    @@media screen and (max-width: 1400px) {
        .searchPageSearchBarContainer {
            width: 100%;
        }

    }
</style>
