@page "/"

@using static AppointMate.Personalization
@using static Atom.Blazor.Personalization

@namespace AppointMate

<PageTitle>@AppointMateConstants.AppName</PageTitle>

<Header AppName="@AppointMateConstants.AppName" 
        Username="Lime" 
        BackColor="@Blue" 
        ForeColor="@White"/>

<div class="backgroundContainer">
    <img class="backgroundImageTopLeft" src="icons/blob2.png" alt="blob" >
    <img class="backgroundImageTopRight" src="icons/blob1.png" alt="blob" />
    <img class="backgroundImageBottomLeft" src="icons/blob1.png" alt="blob" />
    <img class="backgroundImageBottomRight" src="icons/blob2.png" alt="blob" />
</div>

<div class="appContainer">

    <div class="searchSectionContainer">
        <div class="searchSectionLogoAndNameContainer">
            <img class="searchSectionLogo" src="icons/academic.png" alt="logo"/>
            <h1 class="searchSectionName">
                <span class="searchSectionNameFirst">@AppointMateHelpers.SplitCamelCase(AppointMateConstants.AppName)[0]</span>
                <span class="searchSectionNameSecond">@AppointMateHelpers.SplitCamelCase(AppointMateConstants.AppName)[1]</span>
            </h1>
        </div>

        <SearchBar @bind-Text="@SearchText" />

        <div class="searchSectionPopularSearchesContainer">
            <div class="searchSectionPopularSearchesHeader">
                <div class="searchSectionPopularSearchesImageContainer">
                    <img class="searchSectionPopularSearchesImage" src="icons/trending.png" alt="image fire"/>
                </div>

                <h3 class="searchSectionPopularSearchesText">@AppointMateConstants.PopularSearches</h3>
            </div>
            <div class="searchSectionPopularSearchesWrapper">
                <span class="searchSectionPopularSearch">University</span>
                <span class="searchSectionPopularSearch">IEK</span>
                <span class="searchSectionPopularSearch">Kindergarten</span>
                <span class="searchSectionPopularSearch">Primary school</span>
            </div>
        </div>
    </div>
    <div class="uniCollaborationsContainer">
        <UniversityBox Color="EBCA97" Name="University Of Patras" Image="./icons/papa.png" />
        <UniversityBox Color="952927" Name="Aristotle University Of Thessaloniki" Image="./icons/apth.png" />
        <UniversityBox Color="0067C8" Name="University Of Macedonia" Image="./icons/pamak.png" />
        <UniversityBox Color="C5C5C5" Name="National Technical University of Athens" Image="./icons/metsovio.png" />

        <UniversityBox Color="D8726A" Name="University Of Crete" Image="./icons/crete.png" />
        <UniversityBox Color="646464" Name="National and Kapodistrian University of Athens" Image="./icons/ekpa.png" />
        <UniversityBox Color="A1DAFB" Name="University Of Thessaly" Image="./icons/uth.png" />
        <UniversityBox Color="B69A56" Name="Hellenic Mediterranean University" Image="./icons/mesogeiako.png" />
    </div>
</div>

<style>
    .searchSectionContainer {
        position: relative;
        width: 100%;
        height: auto;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: @XXLargeGap;
        padding: @XXLargePadding;
        padding-top: 8%;
        border: solid 1px @LightGray.NormalizedColor();
        border-radius: 0px 0px @VeryLargeBorderRadius @VeryLargeBorderRadius;
    }

    .searchSectionLogoAndNameContainer {
        position: relative;
        width: 100%;
        height: auto;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    .searchSectionLogo {
        position: relative;
        width: 16%;
        height: auto;
        filter: @LightFilterDropShadow;
    }

    .searchSectionName {
        position: relative;
        display: flex;
        font-weight: 900;
        font-size: 400%;
    }

    .searchSectionNameFirst {
        color: @Blue.NormalizedColor();
    }

    .searchSectionNameSecond {
        color: @Green.NormalizedColor();
    }

    .searchSectionPopularSearchesContainer {
        position: relative;
        width: 100%;
        height: auto;
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
        align-items: start;
        gap: @VeryVeryLargeGap;
    }

    .searchSectionPopularSearchesHeader {
        position: relative;
        width: 100%;
        height: auto;
        display: flex;
        flex-direction: row;
        justify-content: flex-start;
        align-items: center;
        gap: @LargeGap;
    }

    .searchSectionPopularSearchesImageContainer {
        position: relative;
        width: 40px;
        height: 40px;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: @NormalPadding;
        background: @ControlHelpers.HexToRGBA(Green, 0.4);
        border-radius: @CircleBorderRadius;
        filter: @LightFilterDropShadow;
    }

    .searchSectionPopularSearchesImage {
        position: relative;
        width: 100%;
        height: 100%;
        filter: @LightFilterDropShadow;
    }

    .searchSectionPopularSearchesText {
        color: @DarkGray.NormalizedColor();
        font-weight: 700;
        font-size: 140%;
    }

    .searchSectionPopularSearchesWrapper {
        position: relative;
        width: 100%;
        display: flex;
        flex-wrap: wrap;
        gap: @LargeGap;
    }

    .searchSectionPopularSearch {
        position: relative;
        font-size: 92%;
        color: @Gray.NormalizedColor();
        padding: @NormalPadding @LargePadding;
        border: solid 1px @LightGray.NormalizedColor();
        border-radius: @VeryLargeBorderRadius;
    }

    .uniCollaborationsContainer {
        position: relative;
        width: 80%;
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: @XXLargeGap;
        padding: 4%;
    }

</style>
